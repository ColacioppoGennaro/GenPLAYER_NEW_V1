<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Search stations..."
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        app:backgroundTint="#FFFFFF" />

    <!-- Filter chips -->
    <HorizontalScrollView
        android:id="@+id/chipScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnFilterAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ALL"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#1DB954"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnFilterFlac"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="FLAC"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3A3A3A"
                android:textColor="#888888" />

            <Button
                android:id="@+id/btnFilterHigh"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="HIGH"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3A3A3A"
                android:textColor="#888888" />

            <Button
                android:id="@+id/btnFilterMedium"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="MEDIUM"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3A3A3A"
                android:textColor="#888888" />

            <Button
                android:id="@+id/btnSortBitrate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="â¬‡ BITRATE"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="#3A3A3A"
                android:textColor="#888888" />

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loading stations..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp" />

    </FrameLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save Selections"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1DB954" />

</LinearLayout>
