<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/txtStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Audio Format Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽµ Audio Format"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Codec:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtCodec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FLAC (audio/flac)"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Bitrate:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtBitrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="896 kbps"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Sample rate:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtSampleRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="44.1 kHz"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Channels:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtChannels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 (Stereo)"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Stream Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ Stream Info"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Server:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtServer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Icecast 2.4.4"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Protocol:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtProtocol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HTTPS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Performance Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Performance"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Buffer:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtBuffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="87%"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="State:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playing âœ“"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="TTFA:"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtTTFA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.2s"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Close button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1DB954"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
